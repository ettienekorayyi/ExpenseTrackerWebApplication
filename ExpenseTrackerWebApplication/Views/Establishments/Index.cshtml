@model  IEnumerable<ExpenseTrackerWebApplication.Models.Establishment>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Establishments:</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EstablishmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>
                @item.EstablishmentName
            </th>
            <th>
                @item.Description
            </th>
            
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EstablishmentId }) |
                @Html.ActionLink("Details", "Details", new { id = item.EstablishmentId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EstablishmentId })
            </td>
        </tr>
    }

</table>